@model SMS.Models.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="service_id" />
            <div class="form-group">
                @Html.DisplayName("Service Po No")
                <input asp-for="service_Po_no" class="form-control" />
                <span asp-validation-for="service_Po_no" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Service Item")
                <input asp-for="service_item" class="form-control" />
                <span asp-validation-for="service_item" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Service Quantity")
                <input asp-for="service_qnty" class="form-control" />
                <span asp-validation-for="service_qnty" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Service Date")
                <input asp-for="service_date" class="form-control" />
                <span asp-validation-for="service_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Costing Price")
                <input asp-for="costing_price" class="form-control" />
                <span asp-validation-for="costing_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Vendor Name")
                <input asp-for="vendor_name" class="form-control" />
                <span asp-validation-for="vendor_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Description")
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
