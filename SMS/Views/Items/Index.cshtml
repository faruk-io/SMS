@model IEnumerable<SMS.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Service Item List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Item Name")
            </th>
            <th>
                @Html.DisplayName("Item Status")
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.item_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.item_status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.item_id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.item_id" class="btn btn-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.item_id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
