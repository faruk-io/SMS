@model IEnumerable<SMS.Models.Delivery>

@{
    ViewData["Title"] = "DelivaryData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ShowDelivary", "Report", FormMethod.Post))
{
    <div class="div">
        <div class="col-md-2">
            @Html.TextBox("Data", null, htmlAttributes: new { @class = "form-control", placeholder = "Enter To Search" })
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>

    </div>
}

@Html.ActionLink("View As PDF", "AllDelivaryReport", "Report", htmlAttributes: new { @class = "btn btn-primary" })
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Delivery Date")
            </th>
            <th>
                @Html.DisplayName("Employee Name")
            </th>
            <th>
                @Html.DisplayName("Quantity")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.delivery_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emp_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.qnty)
                </td>

            </tr>
        }
    </tbody>
</table>

