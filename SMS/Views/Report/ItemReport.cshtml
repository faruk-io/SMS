@model IEnumerable<SMS.Models.Item>

@{
    ViewData["Title"] = "ItemReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ItemReport</h2>

<h1 style="margin-top:100px; margin-left:230px;">Service Management System</h1>
<h2 style="margin-top:20px;margin-left:190px;">Searched Item Details Report -<span style="margin-left:auto;">@DateTime.Now</span></h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Item Name")
            </th>
            <th>
                @Html.DisplayName("Item Status")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.item_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.item_status)
                </td>
            </tr>
        }
    </tbody>
</table>

